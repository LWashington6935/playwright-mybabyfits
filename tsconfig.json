{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node",
      "@playwright/test"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "pages/**/*.ts",
    "tests/**/*.ts",
    "playwright.config.ts"
  ]
}